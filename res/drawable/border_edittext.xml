<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- Set Màu nền cho EditText -->
    <solid android:color="#EEEEEE" />

    <!-- Set màu của đường viền và độ dày của đường viền -->
    <stroke
        
        android:width="1dp"
        android:color="#009966" />
    <!-- Căn chỉnh khoảng cách của text với đường viền -->
    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp" />
    <!-- Độ bo tròn ở 4 góc -->
    <corners android:radius="3dp" />

</shape>
